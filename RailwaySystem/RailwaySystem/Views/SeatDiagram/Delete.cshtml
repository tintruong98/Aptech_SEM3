@model RailwaySystem.Models.SeatDiagram

@{
    ViewData["Title"] = "Delete";
}

<h3 class="alert-success">Delete</h3>
<br />
<h4>Are you sure you want to delete this?</h4>
<div>
    <h4>SeatDiagram</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrainNo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrainNo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Compartment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Compartment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SeatCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SeatCode)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SeatOrder)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SeatOrder)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>

    <form asp-action="Delete" enctype="multipart/form-data" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete?')" />
        <a href="@Url.Action("ListSeatDiagram", "SeatDiagram")">
            <span class="btn btn-outline-primary">Back</span>
        </a>
    </form>
</div>
