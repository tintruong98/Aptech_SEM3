@model RailwaySystem.Models.TrainDetails

@{
    ViewData["Title"] = "Delete";
}

<h3 class="alert-success">Delete</h3>
<br />
<h4>Are you sure you want to delete this?</h4>
<div>
    <h4>TrainDetails</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrainName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrainName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Source)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Source)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destination)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destination)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Departure)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Departure)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
    <form asp-action="Delete" enctype="multipart/form-data" method="post">
        <input type="hidden" asp-for="TrainNo" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete?')" />
        <a href="@Url.Action("ListTrainDetails", "TrainDetails")">
            <span class="btn btn-outline-primary">Back</span>
        </a>
    </form>
</div>
