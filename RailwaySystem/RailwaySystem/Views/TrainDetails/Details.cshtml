@model RailwaySystem.Models.TrainDetails

@{
    ViewData["Title"] = "Details";
}

<h3 class="alert-success">Train Details</h3>
<hr />
<a href="@Url.Action("Index", "Home")">
    <span class="btn btn-outline-primary">Back</span>
</a>
@if (ViewBag.username != null && Model.Status==true && (Model.Departure - DateTime.Now).TotalHours >= 4)
{
    <a href="@Url.Action("FindSeat", "PassengerDetails", new {varLocal = Model.TrainNo, varLocal2=1 })">
        <span class="btn btn-outline-success">Book a seat</span>
    </a>
}
<br />
<br />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TrainName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TrainName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Source)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Source)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Destination)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Destination)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Departure)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Departure)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NoOfCompartment)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NoOfCompartment)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstClass)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.m1ac
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SecondClass)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.m2ac
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ThirdClass)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.m3ac
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SleepRoom)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.msle
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.General)
        </dt>
        <dd class="col-sm-10">
            @ViewBag.mgne
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
